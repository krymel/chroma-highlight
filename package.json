{
    "name": "chroma-highlight",
    "version": "2.4.0-alpha.1",
    "type": "commonjs",
    "description": "A general purpose syntax highlighter in pure Go. Wrapped for Node.js",
    "repository": "https://github.com/krymel/chroma-highlight",
    "scripts": {
        "clean": "rimraf bin",
        "build": "tsup src/main.ts",
        "postinstall": "ts-node install.ts"
    },
    "main": "lib/main.js",
    "types": "lib/main.d.ts",
    "engines": {
        "node": ">=12"
    },
    "bin": {
        "chroma-hl": "bin/chroma"
    },
    "license": "MIT",
    "devDependencies": {
        "tsup": "^6.5.0"
    },
    "dependencies": {
        "@swc/core": "^1.3.26",
        "@swc/helpers": "^0.4.14",
        "@types/node": "*",
        "regenerator-runtime": "^0.13.11",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}